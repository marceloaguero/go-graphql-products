type Product {
  id: ID!
  name: String!
  description: String
  unit: String!
  price: Float!
  stock: Float
  isActive: Boolean
}

type Query {
  product(id: ID!): Product!
  productByName(name: String!): Product!
  products: [Product!]!
}

input ProductInput {
  name: String!
  description: String
  unit: String!
  price: Float!
  stock: Float
  isActive: Boolean
}

type Mutation {
  createProduct(input: ProductInput!): Product!
  updateProduct(id: ID!, input: ProductInput!): Product!
  deleteProduct(id: ID!): Product!
}